[ACE]
numTypes = 2
rcutfac = 5.0 5.0 5.0 5.0
lambda = 1.275 1.275 1.275 1.275
rcinner = 0.0  0.0  0.0 0.0 
drcinner = 0.01 0.01 0.01 0.01
ranks = 1 2 3 4
lmax =  0 5 2 1
nmax =  22 5 3 1
mumax = 2
lmin = 0 0 1 1
nmaxbase = 22
type = Hf O 
bzeroflag = 0

[CALCULATOR]
calculator = LAMMPSPACE
energy = 1
force = 1
stress = 0

[ESHIFT]
Hf = -2.70516846
O  = -0.01277342

[SOLVER]
solver = RIDGE
compute_testerrs = 1
detailed_errors = 1

[RIDGE]
local_solver = 1
alpha = 1.e-4

[SCRAPER]
scraper = XYZ

[PATH]
dataPath = ../../../../../datasets/HfO2_Sivaraman/prl_2021/raw/


[OUTFILE]
output_style = PACE
metrics = HfO2_ridge.md
potential = HfO2_pot

[REFERENCE]
units = metal
atom_style = atomic
pair_style = hybrid/overlay zero 5.0
pair_coeff1 = * * zero


[GROUPS]
group_sections = name training_size testing_size eweight fweight vweight
group_types = str float float float float float
smartweights = 1
random_sampling = 0
train       =     0.90      0.1      1.00000000      300.00000000      1.E-12


[EXTRAS]
dump_descriptors = 0
dump_truth = 0
dump_weights = 0

[MEMORY]
override = 0
