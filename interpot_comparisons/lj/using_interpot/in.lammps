# FCC Argon LJ: e=119.8 kB, sigma = 3.405, rcut=8.51 (10.1103/PhysRevB.54.340)

units          metal 
boundary       p p p 
atom_style     atomic

read_data      fcc_lj_Ar_final_DATA 

pair_style     lj/cut 8.51
pair_coeff     * * 0.01032 3.405 

dump           final_check all custom 1 dump_final_check.custom id type x y z fx fy fz
dump_modify    final_check sort id element Ar format line "%4d %1d %21.16f %21.16f %21.16f %21.16f %21.16f %21.16f"

run            0 
